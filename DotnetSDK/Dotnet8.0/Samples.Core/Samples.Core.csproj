<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>$(FrameworkVersion)</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<AssemblyName>$(BaseNamespace).Samples.Core</AssemblyName>
		<RootNamespace>$(AssemblyName)</RootNamespace>

	</PropertyGroup>

	<ItemGroup>
	  <EmbeddedResource Include="Resources\doc.pdf" />
	  <EmbeddedResource Include="Resources\image.jpeg" />
	  <EmbeddedResource Include="Resources\Sample.txt" />
	  <EmbeddedResource Include="Resources\video.mp4" />
	</ItemGroup>

	<ItemGroup>
	  <PackageReference Include="PreEmptive.Dotfuscator.Samples.Core.Lib" />
	</ItemGroup>

	<ItemGroup>
	  <Compile Update="Resources\Messages.Designer.cs">
	    <DesignTime>True</DesignTime>
	    <AutoGen>True</AutoGen>
	    <DependentUpon>Messages.resx</DependentUpon>
	  </Compile>
	</ItemGroup>

	<ItemGroup>
	  <EmbeddedResource Update="Resources\Messages.resx">
	    <Generator>ResXFileCodeGenerator</Generator>
	    <LastGenOutput>Messages.Designer.cs</LastGenOutput>
	  </EmbeddedResource>
	</ItemGroup>

	<ItemGroup>
	  <None Update="appsettings.core.json">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </None>
	</ItemGroup>

</Project>
